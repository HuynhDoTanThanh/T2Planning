<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="T2Planning.Views.SignUpPage"
             BackgroundColor="#FEC9DD"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout
            VerticalOptions="Center"
            Margin="20">
            <Label
                Text="Create your account"
                HorizontalOptions="Center"
                TextColor="#EB62B9"
                FontSize="30"
                Margin="0, 20" />
            <Entry
                Placeholder="E-mail"
                Keyboard="Text"
                x:Name="EmailInput" />
            <Entry
                Placeholder="Password"
                IsPassword="true"
                x:Name="PasswordInput" />
            <Entry
                Placeholder="Retype password"
                IsPassword="true"
                x:Name="RetypePasswordInput" />
            <Entry 
                Placeholder="Full name"
                Keyboard="Text"
                x:Name="NameInput"/>
            <Button
                Text="Sign Up"
                Clicked="SignUpClicked"
                Margin="60, 40"
                BackgroundColor="#EB62B9"
                TextColor="White" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>